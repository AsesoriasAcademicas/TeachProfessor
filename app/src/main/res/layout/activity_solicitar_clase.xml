<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        tools:context=".SolicitarClaseActivity" >

        <TextView
            android:id="@+id/txt_titulo_solicitar_clase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_indicacion_solicitar_clase"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_titulo_registro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_indicacion_desc_solicitar_clase"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:layout_marginTop="8dp"
            android:text="@string/txt_desc_solicitar_clase" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:hint="@string/txt_materia_solicitar_clase">

            <AutoCompleteTextView
                android:id="@+id/spn_materia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:cursorVisible="false"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/txt_tema_solicitar_clase">

            <AutoCompleteTextView
                android:id="@+id/spn_tema"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"/>

        </com.google.android.material.textfield.TextInputLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/txt_fecha_solicitar_clase"
                android:autofillHints="@string/txt_fecha_solicitar_clase">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_fecha_solicitar_clase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="date"/>

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/img_fecha_solicitar_clase"
                android:layout_width="36dp"
                android:layout_height="46dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp"
                android:clickable="true"
                android:filterTouchesWhenObscured="false"
                android:layout_alignParentRight="true"
                android:background="?selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_calendar_today_black_18dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbtn_no_recurrente_solicitar_clase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clase no recurrente"
                    android:checked="true"/>

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbtn_recurrente_solicitar_clase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clase recurrente" />

            </RadioGroup>

        </RelativeLayout>

        <HorizontalScrollView
            android:id="@+id/checkbox_days_solicitar_clase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkbox_lunes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="L">

                </com.google.android.material.checkbox.MaterialCheckBox>

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkbox_martes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M"
                    android:layout_toEndOf="@id/checkbox_lunes">

                </com.google.android.material.checkbox.MaterialCheckBox>

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkbox_miercoles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M"
                    android:layout_toRightOf="@+id/checkbox_martes">

                </com.google.android.material.checkbox.MaterialCheckBox>

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkbox_jueves"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="J"
                    android:layout_toRightOf="@+id/checkbox_miercoles">

                </com.google.android.material.checkbox.MaterialCheckBox>

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkbox_viernes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="V"
                    android:layout_toRightOf="@+id/checkbox_jueves">

                </com.google.android.material.checkbox.MaterialCheckBox>

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkbox_sabado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S"
                    android:layout_toRightOf="@+id/checkbox_viernes">

                </com.google.android.material.checkbox.MaterialCheckBox>

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkbox_domingo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D"
                    android:layout_toRightOf="@+id/checkbox_sabado">

                </com.google.android.material.checkbox.MaterialCheckBox>

            </RelativeLayout>
        </HorizontalScrollView>

        <RelativeLayout
            android:id="@+id/fecha_fin_solicitar_clase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:autofillHints="@string/txt_fecha_fin_solicitar_clase"
                android:hint="@string/txt_fecha_fin_solicitar_clase">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_fecha_fin_solicitar_clase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="date" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/img_fecha_fin_solicitar_clase"
                android:layout_width="36dp"
                android:layout_height="46dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp"
                android:clickable="true"
                android:filterTouchesWhenObscured="false"
                android:layout_alignParentRight="true"
                android:background="?selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_calendar_today_black_18dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/txt_hora_solicitar_clase"
                android:autofillHints="@string/txt_hora_solicitar_clase">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_hora_solicitar_clase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="time"
                    android:layout_alignParentLeft="true"/>

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/img_hora_solicitar_clase"
                android:layout_width="36dp"
                android:layout_height="46dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp"
                android:clickable="true"
                android:layout_alignParentRight="true"
                android:background="?selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_schedule_black_18dp" />

        </RelativeLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:hint="@string/txt_alumno_solicitar_clase">

            <AutoCompleteTextView
                android:id="@+id/spn_alumno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:cursorVisible="false"/>

        </com.google.android.material.textfield.TextInputLayout>


        <EditText
            android:id="@+id/txt_inquietudes__solicitar_clase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="@string/txt_inquietudes_solicitar_clase"
            android:ems="10"
            android:hint="@string/txt_inquietudes_solicitar_clase"
            android:inputType="textMultiLine"
            android:lines="20"
            android:minLines="2"
            android:scrollHorizontally="false"
            android:scrollbars="vertical"
            android:gravity="bottom"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_disminuir_duracion_solicitar_clase"
                android:layout_width="36dp"
                android:layout_height="46dp"
                android:layout_marginRight="8dp"
                android:clickable="true"
                android:layout_alignParentLeft="true"
                android:background="?selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_remove_circle_black_18dp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/txt_layout_duracion_solicitar_clase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/txt_duracion_solicitar_clase"
                android:autofillHints="@string/txt_hora_solicitar_clase"
                android:layout_toRightOf="@id/img_disminuir_duracion_solicitar_clase">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_duracion_solicitar_clase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_centerInParent="true"/>

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/img_aumentar_duracion_solicitar_clase"
                android:layout_width="36dp"
                android:layout_height="46dp"
                android:layout_marginLeft="8dp"
                android:clickable="true"
                android:layout_alignParentRight="true"
                android:background="?selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_add_circle_black_18dp"
                android:layout_toRightOf="@id/txt_layout_duracion_solicitar_clase"/>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/txt_precio_solicitar_clase"
            android:autofillHints="@string/txt_precio_solicitar_clase">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_precio_solicitar_clase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date"/>

        </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_cancelar_solicitar_clase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="@string/btn_cancelar_registration"
            android:layout_marginRight="5dp"
            android:drawableLeft="@drawable/icon_back_foreground"/>

            <Button
                android:id="@+id/btn_guardar_solicitar_clase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="@string/btn_guardar_solicitar_clase"
                android:drawableLeft="@drawable/icon_save_foreground"/>

    </LinearLayout>

    </LinearLayout>
</ScrollView>