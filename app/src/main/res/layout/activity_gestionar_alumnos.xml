<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="32dp"
        tools:context=".GestionarAlumnosClase">

        <TextView
            android:id="@+id/txt_titulo_gestionar_alumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_listaAlumno_alumnos_alumno"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ListView
                android:id="@+id/listView_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="48dp" />

            <RelativeLayout
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="100"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_cancelar_gestionar_alumno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:layout_below="@id/btn_agregar_gestionar_alumno"
                        android:text="@string/btn_cancelar_gestionar_alumno"
                        android:layout_marginRight="5dp"
                        android:drawableLeft="@drawable/icon_back_foreground"/>

                    <Button
                        android:id="@+id/btn_agregar_gestionar_alumno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:text="@string/btn_agregar_gestionar_alumno"
                        android:drawableLeft="@drawable/icon_add_foreground"/>

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>
</ScrollView>